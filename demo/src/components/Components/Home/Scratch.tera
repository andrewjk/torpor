export default function Scratch() { 
	const $state = $watch({ counter: 0 })

	@render {
		<div>
			<p>
			<input bind:value={$state.counter} />
			</p>
			@if ($state.counter > 5) {
				<p>(1-1) The first is true</p>
				@if ($state.counter > 10) {
					<p>
						(2-1) The second is true!
					</p>
				} else {
					<p>
						(2-2) The second is not true!
					</p>
				}
			} else {
				<p>
					(1-2) The first is not true!
				</p>
			}
		</div>
	}
}
