import Repl from "../repl/Repl.tera"

export default function Playground() {
	@render {
		<div>
			<:head>
				<title>Playground</title>
			</:head>

			<h1>Playground</h1>
			<Repl input={`
export default function Counter() {
	let $state = $watch({
		count: 0
	})

	@render {
		<div>
			<p>
				The count is {$state.count}.
			</p>
			<button onclick={() => $state.count++}>
				Increment
			</button>
			<button onclick={() => $state.count = 0}>
				Reset
			</button>
		</div>
	}
}
`.trimStart()} />
		</div>
	}
}
