import { showPrompt } from "@torpor/ui/Modal";
import CustomDialog from "./CustomDialog.torp";

export default function ExampleFunction() {
	async function show() {
		const result = await showPrompt(CustomDialog);
		if (result) {
			alert(`You prefer ${result}?!`);
		}
	}

	@render {
		<p>
			The button below shows a custom modal dialog component using the
			showPrompt function.
		</p>
		<p>
			<button type="button" onclick={show}>Show a dialog</button>
		</p>
	}
}
