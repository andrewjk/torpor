import { TabContent, TabGroup, TabList } from "@torpor/ui/TabGroup";
import ExampleTabGroup from "./ExampleTabGroup.torp";
import ExampleTabHeader from "./ExampleTabHeader.torp";
import ExampleBasic from "./list-box/ExampleBasic.torp";
import ExampleBasicCode from "./list-box/ExampleBasic.torp?raw";
import ExampleMultiple from "./list-box/ExampleMultiple.torp";
import ExampleMultipleCode from "./list-box/ExampleMultiple.torp?raw";

export default function ListBoxPage() {
	@head {
		<title>ListBox | Torpor</title>
	}

	@render {
		<h1>ListBox</h1>
		<p>
			A list of options that a user can select.
		</p>
		<p>
			See <a href="https://www.w3.org/WAI/ARIA/apg/patterns/listbox/">the WAI ARIA guidelines for ListBoxes</a>.
		</p>
		<h2>Structure</h2>
		<pre><code>{`
<ListBox>
	<ListBoxItem />
	<ListBoxSeparator /> (optional)
</ListBox>
`.trim()}</code></pre>
		<h2>Demo</h2>
		<TabGroup>
			<TabList ariaLabel="Example tabs">
				<ExampleTabHeader>
					Basic
				</ExampleTabHeader>
				<ExampleTabHeader>
					Multiple
				</ExampleTabHeader>
			</TabList>
			<TabContent>
				<ExampleTabGroup>
					<ExampleBasic />
					<fill name="code">
						<pre><code>{ExampleBasicCode.trim()}</code></pre>
					</fill>
				</ExampleTabGroup>
			</TabContent>
			<TabContent>
				<ExampleTabGroup>
					<ExampleMultiple />
					<fill name="code">
						<pre><code>{ExampleMultipleCode.trim()}</code></pre>
					</fill>
				</ExampleTabGroup>
			</TabContent>
		</TabGroup>
	}
}
