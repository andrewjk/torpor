import { showPrompt } from "@torpor/ui/Modal";
import PromptDialog from "./PromptDialog.torp";

export default function ExamplePrompt($props: any) {
	async function show() {
		const result = await showPrompt(PromptDialog, { text: "What is your favorite color?" });
		if (result) {
			alert(`Your favorite color is ${result}?!`);
		}
	}

	@render {
		<p>
			The button below shows a modal dialog with an input box using
			the showPrompt function.
		</p>
		<p>
			<button type="button" onclick={show}>Show a prompt dialog</button>
		</p>
	}
}
