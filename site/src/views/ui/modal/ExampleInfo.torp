import { showModal } from "@torpor/ui/Modal";
import InfoDialog from "./InfoDialog.torp";

export default function ExampleInfo($props: any) {
	async function show() {
		await showModal(InfoDialog, { text: "Press OK to continue..." });
	}

	@render {
		<p>
			The button below shows a modal dialog with an OK button using
			the showModal function.
		</p>
		<p>
			<button type="button" onclick={show}>Show an info dialog</button>
		</p>
	}
}
