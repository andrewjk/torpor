import { Accordion, AccordionItem, AccordionHeader, AccordionTrigger, AccordionContent } from "@torpor/ui/Accordion";

export default function ExampleBasic($props: any) {
	@render {
		<Accordion class="example-dialog">
			<AccordionItem class="example-dialog-item">
				<AccordionHeader as="h4">
					<AccordionTrigger class="example-dialog-trigger">Item 1</AccordionTrigger>
				</AccordionHeader>
				<AccordionContent>
					<div class="example-dialog-content" @/* transition:slide */>The first item</div>
				</AccordionContent>
			</AccordionItem>
			<AccordionItem class="example-dialog-item">
				<AccordionHeader as="h4">
					<AccordionTrigger class="example-dialog-trigger">Item 2</AccordionTrigger>
				</AccordionHeader>
				<AccordionContent>
					<div class="example-dialog-content" @/* transition:slide */>Another item</div>
				</AccordionContent>
			</AccordionItem>
			<AccordionItem class="example-dialog-item">
				<AccordionHeader as="h4">
					<AccordionTrigger class="example-dialog-trigger">Item 3</AccordionTrigger>
				</AccordionHeader>
				<AccordionContent>
					<div class="example-dialog-content" @/* transition:slide */>The last item</div>
				</AccordionContent>
			</AccordionItem>
		</Accordion>
	}

	@style {
		:global(.example-dialog) {
			border: 1px solid gainsboro;
			border-radius: 4px;
			width: 200px;
		}

		:global(.example-dialog-trigger) {
			all: unset;
			cursor: default;
			padding: 5px;
			width: 100%;
		}

		:global(.example-dialog-trigger:focus-visible) {
			box-shadow: black 0px 0px 0px 2px;
		}

		:global(.example-dialog-content) {
			padding: 5px;
			width: 100%;
		}

		:global(.example-dialog-item + .example-dialog-item) {
			border-top: 1px solid gainsboro;
		}

		:global(.example-dialog-trigger[data-state="open"]) {
			border-bottom: 2px solid black;
		}
	}
}
