import { Popover, PopoverContent } from "@torpor/ui/Popover";
import { Dialog, DialogHeader, DialogBody, DialogFooter, DialogButton } from "@torpor/ui/Dialog";

interface Props {
	anchor: HTMLElement;
}

export default function PopoverDialog($props: Props) {
	@render {
		<Popover anchor={$props.anchor} visible>
			<PopoverContent class="popover-dialog-content">
				<Dialog>
					<DialogButton class="popover-dialog-close" type="cancel">X</DialogButton>
					<DialogHeader>
						<h4>Header</h4>
					</DialogHeader>
					<DialogBody>
						<p>Which color do you prefer?</p>
					</DialogBody>
					<DialogFooter class="popover-dialog-footer">
						<DialogButton value="blue">Blue</DialogButton>
						<DialogButton value="red">Red</DialogButton>
					</DialogFooter>
				</Dialog>
			</PopoverContent>
		</Popover>
	}

	@style {
		.popover-dialog-close {
			position: absolute;
			top: 5px;
			right: 5px;
		}

		.popover-dialog-content {
			background: white;
			border: 1px solid gainsboro;
			border-radius: 4px;

			width: 340px;
			padding: 10px;

			z-index: 200;
		}

		.popover-dialog-footer {
			display: flex;
			gap: 10px;
			justify-content: right;
		}
	}
}
