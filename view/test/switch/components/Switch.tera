/**
 * A component with a switch statement in it.
 * @prop {number} value -- The value to switch on.
 */
<div>
    @switch ($props.value) {
        case 1: {
            <p>
                A small value.
            </p>
        }
        case 100: {
            <p>
                A large value.
            </p>
        }
        default: {
            <p>
                Another value.
            </p>
        }
    }
</div>
