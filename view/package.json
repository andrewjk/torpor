{
	"name": "@tera/view",
	"version": "0.0.1",
	"description": "Tera's view library, for writing and mounting components",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./compile": {
			"types": "./dist/compile.d.ts",
			"import": "./dist/compile.js",
			"require": "./dist/compile.cjs"
		},
		"./ssr": {
			"types": "./dist/ssr.d.ts",
			"import": "./dist/ssr.js",
			"require": "./dist/ssr.cjs"
		}
	},
	"private": true,
	"scripts": {
		"build": "tsup && tsx ./scripts/copyToRepl.ts",
		"build:watch": "tsup --watch",
		"check": "tsc -p tsconfig-check.json --noEmit",
		"test": "vitest",
		"test:build": "tsx ./scripts/buildTestOutput.ts",
		"bench": "tsx ./bench/bench.ts",
		"format": "prettier --write ."
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/user-event": "^14.5.2",
		"@trivago/prettier-plugin-sort-imports": "^5.2.0",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.10.1",
		"fast-glob": "^3.3.2",
		"jsdom": "^25.0.1",
		"tinybench": "^3.0.7",
		"ts-blank-space": "^0.4.4",
		"tsup": "^8.3.5",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"vitest": "^2.1.8"
	}
}
