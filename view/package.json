{
	"name": "@tera/view",
	"version": "0.0.1",
	"description": "Tera's view library, for writing and mounting components",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./compile": {
			"types": "./dist/compile.d.ts",
			"import": "./dist/compile.js",
			"require": "./dist/compile.cjs"
		}
	},
	"private": true,
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"check": "tsc -p tsconfig-check.json --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:build": "tsm ./scripts/buildTestOutput.ts",
		"bench": "tsm ./bench/bench.ts",
		"format": "prettier --write ."
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.5.0",
		"@testing-library/user-event": "^14.5.2",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.5.5",
		"fast-glob": "^3.3.2",
		"jsdom": "^25.0.0",
		"tinybench": "^2.9.0",
		"ts-blank-space": "^0.4.1",
		"tsm": "^2.3.0",
		"tsup": "^8.3.0",
		"typescript": "^5.6.2",
		"vitest": "^2.1.1"
	}
}
