{
	"name": "torpor",
	"description": "The Torpor language server.",
	"author": "",
	"icon": "logo.png",
	"license": "ISC",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/andrewjk/torpor"
	},
	"publisher": "torpor",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onLanguage:torpor"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "torpor",
				"extensions": [
					".torp"
				]
			}
		],
		"grammars": [
			{
				"language": "torpor",
				"scopeName": "source.torp",
				"path": "./syntaxes/torpor.tmLanguage.json",
				"embeddedLanguages": {
					"meta.embedded.block.javascript": "javascript",
					"meta.embedded.block.typescript": "typescript",
					"meta.embedded.block.html": "html",
					"meta.embedded.block.css": "css"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.3.0",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"eslint": "^9.33.0",
		"typescript": "^5.9.2"
	}
}
