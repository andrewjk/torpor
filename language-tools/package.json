{
	"name": "torpor",
	"description": "The Torpor language server.",
	"author": "",
	"icon": "logo.png",
	"license": "ISC",
	"version": "0.3.16",
	"repository": {
		"type": "git",
		"url": "https://github.com/andrewjk/torpor"
	},
	"publisher": "torpor",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onLanguage:torpor"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "torpor",
				"extensions": [
					".torp"
				]
			}
		],
		"grammars": [
			{
				"language": "torpor",
				"scopeName": "source.torp",
				"path": "./syntaxes/torpor.tmLanguage.json",
				"embeddedLanguages": {
					"meta.embedded.block.typescript": "script",
					"meta.embedded.block.html": "html",
					"meta.embedded.block.css": "css"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm clean-install && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"test": "vitest",
		"postinstall": "cd client && npm clean-install && cd ../server && npm clean-install && cd ..",
		"publish": "vsce publish",
		"publish:patch": "vsce publish patch",
		"publish:minor": "vsce publish minor",
		"publish:major": "vsce publish major"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.5.2",
		"@typescript-eslint/eslint-plugin": "^8.44.1",
		"@typescript-eslint/parser": "^8.44.1",
		"eslint": "^9.36.0",
		"typescript": "5.5.4",
		"vitest": "^3.2.4"
	}
}
