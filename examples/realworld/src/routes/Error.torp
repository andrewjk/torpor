import { $page } from "@torpor/build/state";

export default function Error() {
	@head {
		<title>{$page.status}</title>
	}

	@render {
		@if ($page.status === 404) {
			<h1>Not found!</h1>
		} else {
			<h1>Something went wrong</h1>
		}
	}

	@style {
		h1 {
			margin: 4em 0;
			text-align: center;
		}

		@media (min-width: 480px) {
			h1 {
				font-size: 4em;
			}
		}
	}
}
