import AnswerButton from "./AnswerButton.torp";

export default function AnswerButtonApp() {
	let $state = $watch({
		isHappy: true
	});

	function onAnswerNo() {
		$state.isHappy = false;
	}

	function onAnswerYes() {
		$state.isHappy = true;
	}

	@render {
		<div>
			<p>Are you happy?</p>
			<AnswerButton onYes={onAnswerYes} onNo={onAnswerNo} />
			<p style="font-size: 50px;">{$state.isHappy ? "ðŸ˜€" : "ðŸ˜¥"}</p>
		</div>
	}
}
