{
	"name": "lsp-embedded-language-service-sample",
	"description": "A language server example using language services to support embedded languages",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onLanguage:tera"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "tera",
				"extensions": [
					".tera"
				]
			}
		],
		"grammars": [
			{
				"language": "tera",
				"scopeName": "text.tera.basic",
				"path": "./syntaxes/tera.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && pnpm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && pnpm install && cd ../server && pnpm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.10.1",
		"@typescript-eslint/eslint-plugin": "^8.18.0",
		"@typescript-eslint/parser": "^8.18.0",
		"eslint": "^9.16.0",
		"typescript": "^5.7.2"
	}
}
