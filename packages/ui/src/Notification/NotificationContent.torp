
interface NotificationContentProps {
	/** An ID for the root element */
	id?: string;
	/** Class name(s) for the root element */
	class?: string,
}

/**
 * The content to display within a Notification.
 */
export default function NotificationContent($props: NotificationContentProps | undefined) {
	@render {
		<div 
			{$props?.id}
			class={`torp-notification-content ${$props?.class ?? ""}`.trim()}
		>
			<slot />
		</div>
	}
}
