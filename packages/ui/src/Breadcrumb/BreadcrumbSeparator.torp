
interface BreadcrumbSeparatorProps {
	/** An ID for the root element */
	id?: string;
	/** Class name(s) for the root element */
	class?: string,
}

/**
 * A separator between links in a Breadcrumb component. It is hidden from
 * screen readers.
 */
export default function BreadcrumbSeparator($props: BreadcrumbSeparatorProps | undefined) {
	@render {
		<div
			{$props?.id}
			class={`torp-breadcrumb-separator ${$props?.class ?? ""}`.trim()}
			aria-hidden="true"
		>
			<slot />
		</div>
	}
}
