import {
	Disclosure,
	DisclosureHeader,
	DisclosureTrigger,
	DisclosureContent
} from "../../../src/Disclosure/index";

export default function DisclosureAccessibility($props: { expanded: boolean }) {
	$props ??= $watch({ expanded: false });

	@render {
		<Disclosure {$props.expanded}>
			<DisclosureHeader as="h4">
				<DisclosureTrigger>Disclosure header</DisclosureTrigger>
			</DisclosureHeader>
			<DisclosureContent>Disclosure content</DisclosureContent>
		</Disclosure>
	}
}
