import { Dialog, DialogBody, DialogButton, DialogFooter } from "../../../src/Dialog/index";
import { Popover, PopoverContent } from "../../../src/Popover/index";

export default function PopoverVariable() {
	let $state = $watch({
		color: "",
		showPopover: false,
	});

	let button: HTMLButtonElement;

	@render {
		<button type="button" onclick={() => ($state.showPopover = !$state.showPopover)} &ref={button}>
			Show the prompt
		</button>

		@if ($state.color) {
			<p>Your favorite color is {$state.color}?!</p>
		}

		<Popover &visible={$state.showPopover} anchor={button}>
			<PopoverContent>
				<Dialog>
					<DialogBody>
						<p>Which color do you prefer?</p>
					</DialogBody>
					<DialogFooter>
						<DialogButton value="blue" onclick={() => ($state.color = "blue")}>Blue</DialogButton>
						<DialogButton value="red" onclick={() => ($state.color = "red")}>Red</DialogButton>
					</DialogFooter>
				</Dialog>
			</PopoverContent>
		</Popover>
	}
}
