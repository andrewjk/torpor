import { Popover, PopoverContent } from "../../../src/Popover/index";
import {
	Dialog,
	DialogBody,
	DialogFooter,
	DialogButton
} from "../../../src/Dialog/index";

export default function CustomDialog() {
	@render {
		<Popover visible {$props.callback}>
			<PopoverContent>
				<Dialog>
					<DialogBody>
						<p>Which color do you prefer?</p>
					</DialogBody>
					<DialogFooter>
						<DialogButton value="blue">Blue</DialogButton>
						<DialogButton value="red">Red</DialogButton>
					</DialogFooter>
				</Dialog>
			</PopoverContent>
		</Popover>
	}
}
