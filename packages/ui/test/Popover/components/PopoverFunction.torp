import { Popover, PopoverContent, showPopover } from "../../../src/Popover/index";
import {
	Dialog,
	DialogBody,
	DialogFooter,
	DialogButton
} from "../../../src/Dialog/index";

export default function PopoverFunction() {
	let anchor;

	async function show() {
		showPopover(CustomDialog, anchor);
	}

	@render {
		<button type="button" &ref={anchor} onclick={show}>Show the prompt</button>
	}
}

function CustomDialog($props) {
	@render {
		<Popover visible {$props.anchor}>
			<PopoverContent>
				<Dialog>
					<DialogBody>
						<p>Which color do you prefer?</p>
					</DialogBody>
					<DialogFooter>
						<DialogButton value="blue">Blue</DialogButton>
						<DialogButton value="red">Red</DialogButton>
					</DialogFooter>
				</Dialog>
			</PopoverContent>
		</Popover>
	}
}
