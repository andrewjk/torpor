import { Popover, PopoverContent, PopoverTrigger } from "../../../src/Popover/index";
import {
	Dialog,
	DialogBody,
	DialogFooter,
	DialogButton
} from "../../../src/Dialog/index";

export default function PopoverTriggerTest() {
	let $state = $watch({
		color: "",
	});

	@render {
		@if ($state.color) {
			<p>Your favorite color is {$state.color}?!</p>
		}

		<Popover &visible={$state.showPopover}>
			<PopoverTrigger>
				Show the prompt
			</PopoverTrigger>
			<PopoverContent>
				<Dialog>
					<DialogBody>
						<p>Which color do you prefer?</p>
					</DialogBody>
					<DialogFooter>
						<DialogButton value="blue" onclick={() => ($state.color = "blue")}>Blue</DialogButton>
						<DialogButton value="red" onclick={() => ($state.color = "red")}>Red</DialogButton>
					</DialogFooter>
				</Dialog>
			</PopoverContent>
		</Popover>
	}
}
