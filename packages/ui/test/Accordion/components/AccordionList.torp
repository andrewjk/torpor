import {
	Accordion,
	AccordionContent,
	AccordionHeader,
	AccordionItem,
	AccordionTrigger,
} from "../../../src/Accordion/index";

export default function AccordionList($props: any) {
	@render {
		<Accordion {$props.value}>
			@for (let item of $props.items) {
				@key = item.id
				<AccordionItem>
					<AccordionHeader>
						<AccordionTrigger>{item.header}</AccordionTrigger>
					</AccordionHeader>
					<AccordionContent>{item.text}</AccordionContent>
				</AccordionItem>
			}
		</Accordion>
	}
}
