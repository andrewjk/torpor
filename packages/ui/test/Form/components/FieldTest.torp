import * as z from "zod";
import { Field, Input, Label, Message } from "../../../src/Form/index";

export default function FormTest($props: { value: string }) {
	const schema = z.string().trim().min(1, { message: "Name is required!" });

	let $state = $watch({
		data: {
			name: "",
		},
	});

	@render {
		<Field name="name" &value={$state.data.name} {schema}>
			<Label>Name:</Label>
			<Input id="name-id" placeholder="Name..." />
			<Message />
		</Field>
	}
}
