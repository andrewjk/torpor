import {
	ListBox,
	ListBoxItem,
	ListBoxSeparator,
} from "../../../src/ListBox/index";

export default function ListBoxWithSeparator($props: any) {
	@render {
		<ListBox value={$props.value}>
			<ListBoxItem value={0}>
				Content 1
			</ListBoxItem>
			<ListBoxSeparator orientation={$props.separatorOrientation}>
				Separator
			</ListBoxSeparator>
			<ListBoxItem value={1}>
				Content 2
			</ListBoxItem>
		</ListBox>
	}
}
