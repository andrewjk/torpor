import {
	ListBox,
	ListBoxItem,
} from "../../../src/ListBox/index";
import {
	ComboBox,
	ComboBoxInput,
	ComboBoxContent,
} from "../../../src/ComboBox/index";

export default function ComboBoxAccessibility($props: any) {
	@render {
		<ComboBox &value={$props.value} type="multiple" ariaLabel="The accessible listbox">
			<ComboBoxInput value={$props.value.join(", ")} />
			<ComboBoxContent>
				@// TODO: Shouldn't have to set type and value here:
				<ListBox type="multiple" value={$props.value}>
					<ListBoxItem>
						Item 1
					</ListBoxItem>
					<ListBoxItem>
						Item 2
					</ListBoxItem>
					<ListBoxItem>
						Item 3
					</ListBoxItem>
				</ListBox>
			</ComboBoxContent>
		</ComboBox>
	}
}
