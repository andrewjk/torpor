import {
	ListBox,
	ListBoxItem,
} from "../../../src/ListBox/index";
import {
	ComboBox,
	ComboBoxInput,
	ComboBoxContent,
} from "../../../src/ComboBox/index";

export default function ComboBoxSingle($props: any) {
	@render {
		<ComboBox &value={$props.value}>
			<ComboBoxInput />
			<ComboBoxContent>
				@// TODO: Shouldn't have to set value here:
				<ListBox value={$props.value}>
					<ListBoxItem>
						Item 1
					</ListBoxItem>
					<ListBoxItem>
						Item 2
					</ListBoxItem>
					<ListBoxItem>
						Item 3
					</ListBoxItem>
				</ListBox>
			</ComboBoxContent>
		</ComboBox>
	}
}
