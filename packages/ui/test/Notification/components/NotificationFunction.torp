import {
	Notification,
	NotificationContainer,
	NotificationContent,
	NotificationClose,
	showNotification
} from '../../../src/Notification/index';
import CustomNotification from './CustomNotification.torp';

export default function NotificationFunction() {
	function show() {
		showNotification(CustomNotification, { text: "Here's a notification" });
	}

	@render {
		<button type="button" onclick={show}>Show a notification</button>

		<NotificationContainer />
	}
}
