import {
	Calendar,
	CalendarDay,
	CalendarDayHeader,
	CalendarGrid,
	CalendarGridHeader,
	CalendarHeader,
	CalendarHeaderTrigger,
} from "../../../src/Calendar/index";

export default function CalendarTest() {
	@render {
		<Calendar
			{$props.selectable}
			{$props.value}
			{$props.startOfWeek}
			{$props.onchange}
			{$props.onchangedate}
			{$props.onclose}
		>
			<CalendarHeader>
				<CalendarHeaderTrigger
					type="previous"
					ariaLabel={$props.prevMonthLabel}
				/>
				<h4>{$slot.monthName} {$slot.year}</h4>
				<CalendarHeaderTrigger
					type="next"
					ariaLabel={$props.nextMonthLabel}
				/>
			</CalendarHeader>
			<CalendarGridHeader>
				@for (let day of $slot.days) {
					<CalendarDayHeader {day.dayName} {day.shortDayName} />
				}
			</CalendarGridHeader>
			<CalendarGrid ariaLabel={$props.calendarGridLabel}>
				@for (let day of $slot.days) {
					@key = day.date
					<CalendarDay
						{day.date}
						{day.muted}
						{day.active}
						ariaLabel={$props.dayLabel}
					/>
				}
			</CalendarGrid>
		</Calendar>
	}
}
