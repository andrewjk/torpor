import {
	Dialog,
	DialogBody,
	DialogButton,
	DialogFooter,
	DialogHeader,
} from "../../../src/Dialog/index";
import { Drawer, DrawerContent, DrawerOverlay, DrawerTrigger } from "../../../src/Drawer";

export default function DrawerWithDialog() {
	@render {
		<Drawer modal={true}>
			<DrawerTrigger>Open Drawer</DrawerTrigger>
			<DrawerOverlay />
			<DrawerContent>
				<Dialog>
					<DialogHeader>Color preference</DialogHeader>
					<DialogBody>Drawer content for accessibility testing.</DialogBody>
					<DialogFooter>
						<DialogButton value="blue">Blue</DialogButton>
						<DialogButton value="red">Red</DialogButton>
					</DialogFooter>
				</Dialog>
			</DrawerContent>
		</Drawer>
	}
}
