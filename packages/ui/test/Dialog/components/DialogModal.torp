import {
	Dialog,
	DialogBody,
	DialogButton,
	DialogFooter,
	DialogHeader,
} from "../../../src/Dialog/index";
import { Modal, ModalContent } from "../../../src/Modal/index";

export default function DialogModal($props: any) {
	$props.alert ??= false;
	$props.ariaAnnounce ??= true;

	let color = "";

	@render {
		<Modal visible>
			<ModalContent>
				<Dialog {$props.alert}>
					<DialogHeader>Color preference</DialogHeader>
					<DialogBody {$props.ariaAnnounce}>Which color do you prefer?</DialogBody>
					<DialogFooter>
						<DialogButton value="blue" onclick={() => (color = "blue")}>Blue</DialogButton>
						<DialogButton value="red" onclick={() => (color = "red")}>Red</DialogButton>
					</DialogFooter>
				</Dialog>
			</ModalContent>
		</Modal>
	}
}
