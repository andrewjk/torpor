import {
	ListBox,
	ListBoxItem,
} from "../../../src/ListBox/index";
import {
	SelectBox,
	SelectBoxInput,
	SelectBoxContent,
} from "../../../src/SelectBox/index";

export default function ListBoxList($props: any) {
	@render {
		<SelectBox &value={$props.value}>
			<SelectBoxInput value={$props.value} />
			<SelectBoxContent>
				@// TODO: Shouldn't have to set value here:
				<ListBox value={$props.value}>
					@for (let item of $props.items) {
						@key = item.id
						<ListBoxItem>
							{item.text}
						</ListBoxItem>
					}
				</ListBox>
			</SelectBoxContent>
		</SelectBox>
	}
}
