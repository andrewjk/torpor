import {
	ListBox,
	ListBoxItem,
} from "../../../src/ListBox/index";
import {
	SelectBox,
	SelectBoxTrigger,
	SelectBoxContent,
} from "../../../src/SelectBox/index";

export default function SelectBoxMultiple($props: any) {
	@render {
		<SelectBox &value={$props.value}>
			@// TODO: Something funny here with slot fallbacks:
			<SelectBoxTrigger>
				{$props.value.join(", ")}
			</SelectBoxTrigger>
			<SelectBoxContent>
				@// TODO: Shouldn't have to set value here:
				<ListBox type="multiple" value={$props.value}>
					<ListBoxItem>
						Item 1
					</ListBoxItem>
					<ListBoxItem>
						Item 2
					</ListBoxItem>
					<ListBoxItem>
						Item 3
					</ListBoxItem>
				</ListBox>
			</SelectBoxContent>
		</SelectBox>
	}
}
