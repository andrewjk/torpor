		<SelectBox &value={$props.value}>
			<SelectBoxTrigger />
			<SelectBoxContent>
				@// TODO: Shouldn't have to set value here:
				<ListBox value={$props.value}>
					<ListBoxItem>
						Item 1
					</ListBoxItem>
					<ListBoxItem>
						Item 2
					</ListBoxItem>
					<ListBoxItem>
						Item 3
					</ListBoxItem>
				</ListBox>
			</SelectBoxContent>
		</SelectBox>
	}
}
