{
	"name": "@torpor/build",
	"version": "0.2.0",
	"description": "A framework for building sites and apps with Torpor",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./response": {
			"types": "./dist/response.d.ts",
			"import": "./dist/response.js"
		},
		"./state": {
			"types": "./dist/state.d.ts",
			"import": "./dist/state.js"
		},
		"./run": {
			"types": "./dist/run.d.ts",
			"import": "./dist/run.js"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"import": "./dist/server.js"
		},
		"./test": {
			"types": "./dist/test.d.ts",
			"import": "./dist/test.js"
		},
		"./manifest": {
			"types": "./src/types/manifest.d.ts"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"tb": "./dist/bin/index.js"
	},
	"scripts": {
		"build": "tsc --noEmit && tsup",
		"build:watch": "tsup --watch",
		"check": "tsc --noEmit",
		"test": "vitest"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@torpor/unplugin": "workspace:^",
		"@torpor/view": "workspace:^",
		"cookie": "^1.0.2",
		"dotenv": "^17.2.2",
		"vite": "^7.1.4",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"tsup": "^8.5.0",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
