{
	"name": "@torpor/build",
	"version": "0.1.31",
	"description": "A framework for building sites and apps with Torpor",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./response": {
			"types": "./dist/response.d.ts",
			"import": "./dist/response.js",
			"require": "./dist/response.cjs"
		},
		"./state": {
			"types": "./dist/state.d.ts",
			"import": "./dist/state.js",
			"require": "./dist/state.cjs"
		},
		"./run": {
			"types": "./dist/run.d.ts",
			"import": "./dist/run.js",
			"require": "./dist/run.cjs"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"import": "./dist/server.js",
			"require": "./dist/server.cjs"
		},
		"./test": {
			"types": "./dist/test.d.ts",
			"import": "./dist/test.js",
			"require": "./dist/test.cjs"
		},
		"./manifest": {
			"types": "./src/types/manifest.d.ts"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"tb": "./dist/bin/index.js"
	},
	"scripts": {
		"build": "tsc --noEmit && tsup",
		"build:watch": "tsup --watch",
		"check": "tsc --noEmit",
		"test": "vitest"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@torpor/unplugin": "workspace:^",
		"@torpor/view": "workspace:^",
		"cookie": "^1.0.2",
		"dotenv": "^16.5.0",
		"vite": "^7.0.0",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"tsup": "^8.5.0",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}
