{
	"name": "@torpor/build",
	"version": "0.4.9",
	"description": "A framework for building sites and apps with Torpor",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"import": "./dist/index.mjs"
		},
		"./nav": {
			"types": "./dist/nav.d.mts",
			"import": "./dist/nav.mjs"
		},
		"./response": {
			"types": "./dist/response.d.mts",
			"import": "./dist/response.mjs"
		},
		"./run": {
			"types": "./dist/run.d.mts",
			"import": "./dist/run.mjs"
		},
		"./server": {
			"types": "./dist/server.d.mts",
			"import": "./dist/server.mjs"
		},
		"./state": {
			"types": "./dist/state.d.mts",
			"import": "./dist/state.mjs"
		},
		"./test": {
			"types": "./dist/test.d.mts",
			"import": "./dist/test.mjs"
		},
		"./manifest": {
			"types": "./src/types/manifest.d.ts"
		}
	},
	"files": [
		"dist",
		"./src/types/manifest.d.ts"
	],
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"tb": "./dist/bin/index.js"
	},
	"scripts": {
		"check": "tsgo --noEmit && pnpm dlx oxlint --type-aware",
		"build": "tsgo --noEmit && tsdown",
		"build:fix": "esno scripts/postbuild.ts",
		"build:watch": "tsdown --watch",
		"test": "vitest"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@torpor/unplugin": "workspace:^",
		"@torpor/view": "workspace:^",
		"cookie": "^1.0.2",
		"dotenv": "^17.2.3",
		"vite": "^7.2.2",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"@typescript/native-preview": "7.0.0-dev.20251112.1",
		"esno": "^4.8.0",
		"oxlint-tsgolint": "^0.6.0",
		"tsdown": "^0.16.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.8"
	}
}
