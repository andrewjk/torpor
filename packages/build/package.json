{
	"name": "@torpor/build",
	"version": "0.0.6",
	"description": "A framework for building sites and apps with Torpor",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./response": {
			"types": "./dist/response.d.ts",
			"import": "./dist/response.js",
			"require": "./dist/response.cjs"
		},
		"./state": {
			"types": "./dist/state.d.ts",
			"import": "./dist/state.js",
			"require": "./dist/state.cjs"
		},
		"./manifest": {
			"types": "./src/types/manifest.d.ts"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"tb": "./dist/bin/index.js"
	},
	"scripts": {
		"build": "tsup",
		"build:watch": "tsup --watch",
		"check": "tsc --noEmit",
		"test": "vitest",
		"serve": "tsx ./src/app/serve.ts",
		"build:client": "vite build --outDir dist/client",
		"build:server": "vite build --outDir dist/server --ssr src/app/serverEntry.ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@torpor/unplugin": "workspace:^",
		"@torpor/view": "workspace:^",
		"cookie": "^1.0.2",
		"dotenv": "^16.4.7",
		"vite": "^6.2.3",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/express": "^5.0.1",
		"express": "^4.21.2",
		"tsup": "^8.4.0",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"vitest": "^3.0.9"
	}
}
