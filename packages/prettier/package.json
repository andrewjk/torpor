{
	"name": "@torpor/prettier",
	"version": "0.0.1",
	"description": "A Prettier plugin for Torpor files",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"import": "./dist/index.mjs",
			"default": "./dist/index.mjs"
		}
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"check": "tsgo --noEmit && pnpm dlx oxlint --type-aware",
		"build": "tsgo --noEmit && tsdown",
		"build:watch": "tsdown --watch",
		"test": "vitest"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@torpor/view": "workspace:^",
		"prettier": "^3.6.2"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"@typescript/native-preview": "7.0.0-dev.20251112.1",
		"oxlint-tsgolint": "^0.6.0",
		"tsdown": "^0.16.4",
		"tsx": "^4.20.6",
		"vitest": "^4.0.8"
	}
}
