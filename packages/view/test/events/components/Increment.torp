export default function Increment() {
	let $state = $watch({ counter: 0 })

	function increment(e, num) {
		$state.counter += num || 1;
	}

	@render {
		<button id="increment" onclick={increment}>
			Increment
		</button>
		<button id="increment5" onclick={(e) => increment(e, 5)}>
			Increment
		</button>
		<p>
			The count is {$state.counter}.
		</p>
	}
}
