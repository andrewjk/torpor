interface Props {
	/** The value to switch on */
	value: number
}

/**
 * A component with a switch statement in it.
 */
export default function Switch($props: Props) {
	@render {
		@switch ($props.value) {
			case 1: {
				<p>
					A small value.
				</p>
			}
			case 100: {
				<p>
					A large value.
				</p>
			}
			default: {
				<p>
					Another value.
				</p>
			}
		}
	}
}
