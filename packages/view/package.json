{
	"name": "@torpor/view",
	"version": "0.2.0",
	"description": "Torpor's view library, for writing and mounting components",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./compile": {
			"types": "./dist/compile.d.ts",
			"import": "./dist/compile.js"
		},
		"./ssr": {
			"types": "./dist/ssr.d.ts",
			"import": "./dist/ssr.js"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsgo --noEmit && tsdown && tsx ./scripts/copyToRepl.ts",
		"build:watch": "tsdown --watch",
		"check": "tsgo --noEmit && pnpm dlx oxlint --type-aware",
		"test": "vitest",
		"test:build": "tsx ./scripts/buildTestOutput.ts",
		"bench": "tsx ./bench/bench.ts",
		"format": "prettier --write ."
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/user-event": "^14.6.1",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^24.5.2",
		"@typescript/native-preview": "7.0.0-dev.20250918.1",
		"fast-glob": "^3.3.3",
		"jsdom": "^27.0.0",
		"oxlint-tsgolint": "^0.2.0",
		"sucrase": "^3.35.0",
		"tinybench": "^5.0.1",
		"tsdown": "^0.15.2",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
