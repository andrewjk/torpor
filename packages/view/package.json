{
	"name": "@torpor/view",
	"version": "0.0.14",
	"description": "Torpor's view library, for writing and mounting components",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./compile": {
			"types": "./dist/compile.d.ts",
			"import": "./dist/compile.js",
			"require": "./dist/compile.cjs"
		},
		"./ssr": {
			"types": "./dist/ssr.d.ts",
			"import": "./dist/ssr.js",
			"require": "./dist/ssr.cjs"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsc --noEmit && tsup && tsx ./scripts/copyToRepl.ts",
		"build:watch": "tsup --watch",
		"check": "tsc --noEmit",
		"test": "vitest",
		"test:build": "tsx ./scripts/buildTestOutput.ts",
		"bench": "tsx ./bench/bench.ts",
		"format": "prettier --write ."
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/user-event": "^14.6.1",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.15.19",
		"fast-glob": "^3.3.3",
		"jsdom": "^26.1.0",
		"sucrase": "^3.35.0",
		"tinybench": "^4.0.1",
		"tsup": "^8.5.0",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"vitest": "^3.1.3"
	}
}
